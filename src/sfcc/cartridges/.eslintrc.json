{
  "root": true,
  "extends": "airbnb-base/legacy",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "func-names": "off",
    "func-style": "off",
    "global-require": "off",
    "import/no-unresolved": "off",
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1
      }
    ],
    "lines-around-directive": "off",
    "no-prototype-builtins": "off",
    "no-unused-vars": "off",
    "no-unused-expressions": "off",
    "no-shadow": [
      "error",
      {
        "allow": [
          "err",
          "callback"
        ]
      }
    ],
    "no-trailing-spaces": "off",
    "max-len": "off",
    "one-var": "off",
    "padded-blocks": "off",
    "require-jsdoc": "error",
    "valid-jsdoc": [
      "error",
      {
        "preferType": {
          "Boolean": "Boolean",
          "Number": "Number",
          "object": "Object",
          "String": "String"
        },
        "requireReturn": false
      }
    ],
    "vars-on-top": "warn"
  }
}
